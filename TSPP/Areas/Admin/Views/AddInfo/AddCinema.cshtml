
@{
    ViewData["Title"] = "AddCinema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">

    <div class="col-md-6">
        <form asp-action="AddCinema" asp-controller="AddInfo" method="post">

            <fieldset>
                <legend>Add new cinema:</legend>
                Назва кінотеатру:<br>
                <input class="form-control" type="text" name="cinemaname" /><br>
                Адреса:<br>
                <input class="form-control" type="text" name="address"><br>

                <input type="submit" class="btn btn-primary" value="Додати фільм">
            </fieldset>
        </form>
    </div>
    <div class="col-md-6">
       

        @Html.ActionLink("Додати фільм", "AddMovie", "AddInfo");


    </div>



</div>
